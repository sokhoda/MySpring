<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="core.Client">
        <constructor-arg type="java.lang.Integer" value="1"/>
        <constructor-arg type="java.lang.String" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="core.ConsoleEventLogger"/>

    <bean id="app" class="core.App">
        <constructor-arg ref="fileEventLogger"/>
        <constructor-arg ref="client"/>
    </bean>

    <bean id="event" class="core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id="fileEventLogger" class="core.FileEventLogger">
        <constructor-arg value="D:\IdeaProjects\MySpring\events.txt"/>
    </bean>

</beans>